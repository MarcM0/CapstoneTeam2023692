<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context=".ui.settings.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/generalSettingsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="General"
                android:textStyle="bold"
                android:textSize="32dp"
                />

            <TextView
                android:id="@+id/VoiceSelectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Voice"
                />

            <Spinner
                android:id="@+id/VoiceSelection"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/rtaSettingsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="RTA Mode"
                android:textStyle="bold"
                android:textSize="32dp"
                />

            <TextView
                android:id="@+id/promptTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="LLM Prompt"
                />

            <EditText
                android:id="@+id/promptBox"
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:elegantTextHeight="false"
                android:ems="10"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Write LLM prompt here for RTA Mode"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/tokenCountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="LLM Output Token Count"
                />

            <EditText
                android:id="@+id/tokenCountBox"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:elegantTextHeight="false"
                android:ems="10"
                android:inputType="number"
                android:scrollHorizontally="false"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Reset Defaults"
                />

            <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="100dp"
                android:text="Save"
                />



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>